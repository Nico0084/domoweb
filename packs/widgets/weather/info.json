{
    "json_version" : 2,
    "identity" : {
        "type" : "dmw_widgetset",
        "id" : "weather",
        "version" : 1,
        "name" : "Weather",
        "description" : "Widgets for Weather data",
        "author" : "Ferllings",
        "author_email" : "cedric@domogik.org"
    },
    "widgets": {
        "uv": {
            "name" : "U.V. Index",
            "height" : 1,
            "width" : 1,
            "sensors" : {
                "primary" : {
                    "name": "UV meter",
                    "description": "UV meter sensor",
                    "types" : ["DT_Number"],
                    "required": true                   
                }
            }
        },
        "wind": {
            "name" : "Wind Speed and direction",
            "height" : 2,
            "width" : 2,
            "sensors" : {
                "direction" : {
                    "name": "Direction",
                    "description": "Direction in degree",
                    "types" : ["DT_Angle"],
                    "required": true                   
                },
                "speed" : {
                    "name": "Speed",
                    "description": "Speed m/s (or km/h)",
                    "types" : ["DT_Speed", "DT_kmhSpeed"],
                    "required": false                   
                },
                "gust" : {
                    "name": "Gust",
                    "description": "Gust m/s (or km/h)",
                    "types" : ["DT_Speed", "DT_kmhSpeed"],
                    "required": false                   
                }
            }
        },        
        "forecast": {
            "name" : "Forecast",
            "description" : "Weather forecast",
            "height" : 1,
            "width" : 3,
            "options" : {},
            "devices" : {
                "forecast" : {
                    "name": "Location",
                    "description": "Forecast location",
                    "types" : ["weather.weather"],
                    "required": true                   
                }
            }
        }
    }
}
