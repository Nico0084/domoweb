{
    "json_version" : 2,
    "identity" : {
        "type" : "dmw_widgetset",
        "id" : "basic",
        "version" : 1,
        "name" : "Basic",
        "description" : "Basic widgets for single sensors/commands",
        "author" : "Ferllings",
        "author_email" : "cedric@domogik.org"
    },
    "widgets": {
        "sensorNumber": {
            "name" : "Sensor Number",
            "height" : 1,
            "width" : 1,
            "options" : {
                "autoconvert" : {
                    "name": "Automatic conversion",
                    "description": "Automatically convert big value to K(x) / M(x) / G(x) / T(x)",
                    "type": "boolean",
                    "default": "False"
                }
            },
            "sensors" : {
                "primary" : {
                    "name": "Number",
                    "description": "Number sensor",
                    "types" : ["DT_Number"],
                    "required": true
                }
            }
        },
        "sensorBool": {
            "name" : "Sensor Bool",
            "height" : 1,
            "width" : 1,
            "sensors" : {
                "primary" : {
                    "name": "Bool",
                    "description": "Bool sensor",
                    "types" : ["DT_Bool"],
                    "required": true
                }
            }
        },
        "commandString": {
            "name" : "Command String",
            "height" : 1,
            "width" : 2,
            "commands" : {
                "primary" : {
                    "name": "Text",
                    "types" : [
                        ["DT_String"]
                    ],
                    "required": true
                }
            }
        },
        "commandBool": {
            "name" : "Command Boolean",
            "height" : 1,
            "width" : 1,
            "options" : {
                "circle" : {
                    "name": "Round button",
                    "description": "Display the button as a circle instead of a square",
                    "type": "boolean",
                    "default": "False"
                }
            },
            "sensors" : {
                "boolstate" : {
                    "name": "Bool state",
                    "description": "Bool feedback state",
                    "types" : ["DT_Bool"],
                    "required": false
                }
            },
            "commands" : {
                "primary" : {
                    "name": "Boolean",
                    "types" : [
                        ["DT_Bool"]
                    ],
                    "required": true
                }
            }
        },
        "commandTrigger": {
            "name" : "Command Trigger",
            "height" : 1,
            "width" : 1,
            "commands" : {
                "primary" : {
                    "name": "Trigger",
                    "types" : [
                        ["DT_Trigger"]
                    ],
                    "required": true
                }
            }
        },
        "commandRange": {
            "name" : "Command Range",
            "height" : 1,
            "width" : 2,
            "sensors" : {
                "scalingstate" : {
                    "name": "Scaling state",
                    "description": "Scaling feedback state",
                    "types" : ["DT_Scaling"],
                    "required": false
                }
            },
            "commands" : {
                "primary" : {
                    "name": "Scaling",
                    "types" : [
                        ["DT_Scaling"]
                    ],
                    "required": true
                }
            }
        },
        "sensorString": {
            "name" : "Sensor String",
            "height" : 1,
            "width" : 3,
            "sensors" : {
                "primary" : {
                    "name": "Text",
                    "description": "A text sensor to display",
                    "types" : ["DT_String"],
                    "required": true
                }
            }
        },
        "sensorChart": {
            "name" : "Chart for sensor Number",
            "height" : 1,
            "width" : 2,
            "options" : {
                "autoconvert" : {
                    "name": "Automatic conversion",
                    "description": "Automatically convert big value to K(x) / M(x) / G(x) / T(x)",
                    "type": "boolean",
                    "default": "False"
                },
                "chartColor" : {
                    "name": "Chart color",
                    "description": "Set the chart color",
                    "type": "string",
                    "default": "#ffffff"
                },
                "chartMinValue" : {
                    "name": "Chart minimun value",
                    "description": "Set the chart minimum value",
                    "type": "number",
                    "default": "None"
                },
                "chartMaxValue" : {
                    "name": "Chart maximum value",
                    "description": "Set the chart maximum value",
                    "type": "number",
                    "default": "None"
                }
            },
            "sensors" : {
                "primary" : {
                    "name": "Number",
                    "description": "Number sensor",
                    "types" : ["DT_Number"],
                    "required": true
                }
            }
        }
    }
}
